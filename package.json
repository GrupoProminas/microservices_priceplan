{
  "name": "ms-price-and-plans",
  "version": "1.0.0",
  "description": "Base for REST API using NodeJS/ExpressJS, with Docker or PM2 deployment.",
  "author": "Ti Prominas <desenvolvimento@ucamprominas.com.br>",
  "license": "MIT",
  "main": "src/app.js",
  "scripts": {
    "update": "sh update.sh",
    "dev": "export NODE_ENV='development' && nodemon --exec babel-node src/app.js --use_strict --presets es2015",
    "test": "export NODE_ENV='test' && mocha --timeout 10000 src/tests/ --compilers js:babel-core/register --recursive",
    "build": "export NODE_ENV='production' && npm run clean && babel src --ignore test.js --out-dir ./dist --copy-files",
    "buildTwo": "rm -rf dist && mkdir dist && babel ./src -d ./dist --copy-files",
    "clean": "rm -rf dist && mkdir dist",
    "prod": "npm run buildTwo && export NODE_ENV='production' && pm2 start --name 'ei-api-data' dist/app.js",
    "start": "pm2 start pm2-deploy.yml",
    "stop": "pm2 stop pm2-deploy.yml",
    "restart": "pm2 restart pm2-deploy.yml",
    "start-docker": "sudo docker-compose up -d ; sudo docker ps",
    "stop-docker": "sudo docker-compose stop",
    "build-homo": "export NODE_ENV=homologation && npm run clean-homo && babel src --ignore test.js --out-dir ./dist-homo --copy-files",
    "clean-homo": "rm -rf dist-homo && mkdir dist-homo",
    "start-homo": "pm2 start pm2-deploy-homo.yml",
    "stop-homo": "pm2 stop pm2-deploy-homo.yml",
    "restart-homo": "pm2 restart pm2-deploy-homo.yml"
  },
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-minify": "^0.4.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "eslint": "^4.19.1",
    "eslint-plugin-promise": "^3.8.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4"
  },
  "dependencies": {
    "@types/node": "^10.11.7",
    "acl": "^0.4.11",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "crypto": "^1.0.1",
    "express": "^4.16.4",
    "helmet": "^3.14.0",
    "http-status-codes": "^1.3.0",
    "joi": "^13.7.0",
    "joi-i18n": "^13.1.3",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.13",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.1",
    "nodemailer": "^4.7.0",
    "pg": "^7.5.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "sequelize": "^4.39.0"
  }
}
